<% if !current_user %>
  <%= form_for(:session, :url => sessions_path, :html => {:class => "form-horizontal col-sm-3 float-middle"}) do |f| %>
    <h1 style="padding-top: 0px; text-align: center">Sign in</h1>
    <div class="field form-group">
      <%= f.text_field :username, class: "form-control col-sm-5", placeholder: "Username" %>
    </div>
    <div class="field form-group">
      <%= f.password_field :password, class: "form-control col-sm-5" , placeholder: "Password" %>
    </div>
    <div class="actions">
      <%= f.submit :Login, class: "btn btn-primary btn-default" %>
    </div>
  <% end %>
  <div style="text-align: center">No account yet? <%= link_to "Register", new_user_path, class: "link" %></div>
<% else %>
 <meta http-equiv="refresh" content="0;URL='/dashboard'" />
<% end %>